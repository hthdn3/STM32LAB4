#include "command_parser_fsm.h"
#include "global.h"

uint8_t command_length;
uint8_t command_data[10];
uint8_t command_flag = 0;

void command_parser_fsm (){
	switch (sst_c){
	        case wait:
	            if (temp == 0x21 ) {
	               command_length = 0;
	                sst_c = receive ;
	            }
	            break;

	        case receive:
	            if (temp != 0x21 && temp != 0x23 ) {
	                command_data [command_length++] = temp;
	            }
	            if (temp == 0x21 ) {
	            	command_length = 0;
	            }

	            if (temp == 0x23 ) {
	                status_cmd = wait;
	                command_flag = 1;
	            }
	            break;

	        default:
	            break;
	    }
	}


